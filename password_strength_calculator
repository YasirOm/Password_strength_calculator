def calculate_password_strength(password):
    score = 0
    length = len(password)
    uppercase_letters = any(char.isupper() for char in password)
    lowercase_letters = any(char.islower() for char in password)
    digits = any(char.isdigit() for char in password)
    special_characters = any(char in "!@#$%^&*()-_=+[]{}|;:,.<>?/" for char in password)

    # Calculate the score based on different criteria
    score += length * 4
    if uppercase_letters:
        score += 2
    if lowercase_letters:
        score += 2
    if digits:
        score += 4
    if special_characters:
        score += 6

    return score

def main():
    print("Welcome to the Password Strength Detector!")
    password = input("Enter your password: ")

    strength_score = calculate_password_strength(password)
    print(f"Password Strength Score: {strength_score}")

    if strength_score >= 30:
        print("Password is strong.")
    elif strength_score >= 20:
        print("Password is moderate.")
    else:
        print("Password is weak.")

if __name__ == "__main__":
    main()
